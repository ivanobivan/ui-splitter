{
  "name": "ui-splitter",
  "version": "1.0.4",
  "description": "ui-splitter like jquery-splitter-widget",
  "main": "dist/index.js",
  "scripts": {
    "start": "rimraf ./dist & webpack --config ./webpack.config.js --mode development --color --stats normal --watch",
    "compile": "rimraf ./dist & webpack --config ./webpack.config.js --mode production --color --stats normal",
    "server": "node ./public/server.js",
    "test": "npm run test:chrome && npm run test:firefox",
    "test:chrome": "npm run test:chrome:horizontal && npm run test:chrome:vertical",
    "test:firefox": "npm run test:firefox:horizontal && npm run test:firefox:vertical",
    "test:chrome:horizontal": "cross-env BROWSER=chrome ORIENTATION=horizontal mocha -r ts-node/register test/**/*.test.ts",
    "test:chrome:vertical": "cross-env BROWSER=chrome ORIENTATION=vertical mocha -r ts-node/register test/**/*.test.ts",
    "test:firefox:horizontal": "cross-env BROWSER=firefox ORIENTATION=horizontal mocha -r ts-node/register test/**/*.test.ts",
    "test:firefox:vertical": "cross-env BROWSER=firefox ORIENTATION=vertical mocha -r ts-node/register test/**/*.test.ts",
    "documentation": "rimraf ./docs & typedoc"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Ivan Kolesov",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/selenium-webdriver": "^4.0.11",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@typescript-eslint/typescript-estree": "^2.34.0",
    "autoprefixer": "^10.2.4",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-eslint-plugin": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^2.5.1",
    "express": "^4.17.1",
    "mocha": "^8.2.1",
    "postcss": "^8.2.6",
    "postcss-loader": "^5.0.0",
    "prettier": "^1.19.1",
    "selenium-webdriver": "^4.0.0-alpha.8",
    "sinon": "^9.2.4",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.16",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.1.3",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {},
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
